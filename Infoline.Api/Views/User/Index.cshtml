@model Infoline.Api.ViewModels.UserInfoViewModel
@{
    ViewData["Title"] = "Users";
}

<div class="container">
    <div class="row">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Cinsiyet </th>
                            <th scope="col">Telefon </th>
                            <th scope="col">Email </th>
                            <th scope="col">Kullanıcı Adı</th>
                            <th scope="col">Adı </th>
                            <th scope="col">Soyadı </th>
                            <th scope="col">Yaşı  </th>
                            <th scope="col">Şehir </th>
                            <th scope="col">Posta Kodu</th>
                            <th scope="col">Aksiyon</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Users)
                        {
                            <tr>
                                <td>@item.Gender</td>
                                <td>@item.Cell </td>
                                <td>@item.Email</td>
                                <td>@item.UserName</td>
                                <td>@item.FirstName</td>
                                <td>@item.LastName </td>
                                <td>@item.Age  </td>
                                <td>@item.City </td>
                                <td>@item.PostCode</td>
                                <td>
                                    <a asp-action="Delete" asp-controller="User" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
