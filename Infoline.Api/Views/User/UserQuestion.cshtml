@model Infoline.Api.ViewModels.UserQuestionViewModel
@{
    ViewData["Title"] = "UserQuestion";
}

<div class="row">
    <form asp-action="UserQuestion" asp-controller="User">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="User.Id" class="control-label">Kullanıcılar</label>
                    <select asp-for="User.Id"
                            asp-items="@(new SelectList(Model.Users,"Id","FullName"))">
                        <option>Please select one</option>
                    </select>
                </div>

                <input asp-for="QuestionDto.Id" value="@Model.QuestionDto.Id" />
                <div class="form-group">
                    <label asp-for="QuestionDto.Text" class="control-label">@Model.QuestionDto.Text</label>
                    <input asp-for="QuestionDto.Answer" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Ekle" class="btn btn-primary" style="float:right" />
                </div>
            </div>
        </div>
    </form>
</div>

